<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="@dimen/_5sdp">

    <LinearLayout
        android:id="@+id/containerRoom"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:elevation="8dp"
            app:cardCornerRadius="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgRoom"
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:scaleType="fitXY"
                android:layout_height="100dp"
                android:src="@drawable/bg_room" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tvNameRoom"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:text="Phòng trọ sinh viên, có gác xép"
                android:textColor="@color/cardview_dark_background"
                android:textSize="16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrice"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="1.000.000đ"
                android:textColor="@color/bg_user_top"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/tvAddressRoom"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"
                android:text="Cầu Giấy, Hà Nội"
                android:textSize="10dp" />

            <TextView
                android:layout_marginStart="10dp"
                android:id="@+id/tvTrangThai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Trang thái"
                android:textSize="10dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tvDayTin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="10dp"
                    android:text="Đẩy tin ngay"
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/tvAntin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginBottom="10dp"
                    android:text="Ân ngay"
                    android:textColor="@color/red"
                    android:textSize="10dp"
                    android:textStyle="bold" />
            </LinearLayout>



        </LinearLayout>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/menu_ctr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_menu"
            android:layout_gravity="right|top"
            tools:ignore="RtlHardcoded" />



    </LinearLayout>
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</androidx.cardview.widget.CardView>

